@model HospitalManagementSystem.Models.BranchDto
@{
    ViewBag.Title = "Edit";
}

<h2>Update a Branch Details</h2>
<form action="/Branch/Update/@Model.BranchId" method="POST">
    <div>
        <input type="hidden" name="BranchId" value="@Model.BranchId"/>
    </div>
    <div>
        <label>Branch Name:</label>
        <input type="text" name="BranchName" value="@Model.BranchName"/>
    </div>
    <div>
        <label>Branch Email:</label>
        <input type="email" name="BranchEmail" value="@Model.BranchEmail"/>
    </div>
    <div>
        <label>Branch Phone:</label>
        <input type="number" name="BranchPhone" value="@Model.BranchPhone"/>
    </div>
    <div>
        <label>Branch Address:</label>
        <input type="text" name="BranchAddress" value="@Model.BranchAddress"/>
    </div>
    <div>
        <input type="submit" value="Update Branch Details"/>
    </div>
</form>

