@model HospitalManagementSystem.Models.ViewModels.UpdateAppointments
@{
    ViewBag.Title = "Edit";
}

<h2>Update a Appointments Details</h2>
<a href="/Appointments/List" class="go-Back-List">Go back to list</a>
<form action="/Appointments/Update/@Model.SelectedAppointment.AppointmentId" class="Appointments-edit-from" method="POST">
    <div class="AppointmentsId">
        <input type="hidden" name="AppointmentId" value="@Model.SelectedAppointment.AppointmentId" />
    </div>
    <div class="AppointmentName">
        <label>Appointment Name:</label>
        <input type="datetime-local" name="AppointmentDateANdTime" value="@Model.SelectedAppointment.AppointmentDateAndTime" />
    </div>
    <div class="AppointmentsSeletct">
        <label>Patient Id:</label>
        <select name="PatientId">
            @foreach (var Patient in Model.PatientOptions)
            {
                <option value="@Patient.PatientId"> @Patient.PatientName</option>

            }
        </select>

    </div>
    <div class="AppointmentsSubmit">
        <input type="submit" value="Update Appointments Details" />
    </div>
</form>

<style>
    .go-Back-List {
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        margin-bottom: 10px;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    form.Appointments-edit-from {
        display: table-caption;
        padding: 25px;
        background-color: #eaeae8;
    }

    input[type="text"] {
        height: 27px;
        width: 179px;
    }

    input[type="submit"] {
        margin-top: 14px;
        width: 183px;
        height: 33px;
        background-color: #007bff;
        color: #fff;
    }
</style>