@model IEnumerable<HospitalManagementSystem.Models.AppointmentDto>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<div><a href="/Appointments/New">New Appointment</a></div>

@foreach (var Appointment in Model)
{
    <h2><a href="/Appointments/Details/@Appointment.AppointmentId">@Appointment.AppointmentDateAndTime</a></h2>

}

<style>
    .patientnew {
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        margin-bottom: 10px;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .patientnew:hover {
            background-color: #0056b3;
            color: #ffff;
        }

    .patient-grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 15px;
    }

    .patient-card {
        background-color: #eaeae8;
        padding: 20px;
        border-radius: 5px;
        margin-bottom: 20px;
    }

        .patient-card h2 {
            margin-top: 0;
        }

    .patientName a {
        color: #007bff;
        text-decoration: none;
    }

    .patientPhone,
    .patientEmail,
    .patientDetail,
    .patientAddress,
    .patientBranch {
        margin-bottom: 10px;
    }
</style>