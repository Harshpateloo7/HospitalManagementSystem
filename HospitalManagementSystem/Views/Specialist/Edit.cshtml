@model HospitalManagementSystem.Models.ViewModels.UpdateSpecialist
@{
    ViewBag.Title = "Edit";
}

<h2>Update a Specialist Details</h2>
<a href="/Specialist/List" class="go-Back-List">Go back to list</a>
<form action="/Specialist/Update/@Model.SelectedSpecialist.SpecialistId" class="Specialist-edit-from" method="POST">
    <div class="SpecialistId">
        <input type="hidden" name="SpecialistId" value="@Model.SelectedSpecialist.SpecialistId"/>
    </div>
    <div class="SpecialistName">
        <label>Name:</label>
        <input type="text" name="SpecialistName" value="@Model.SelectedSpecialist.SpecialistName"/>
    </div>
    <div class="SpecialistSeletct">
        <label>Doctor Id:</label>
        <select name="DoctorId">
            @foreach (var Doctor in Model.DoctorOptions)
            {
                <option value="@Doctor.DoctorId"> @Doctor.DoctorName</option>

            }
        </select>

    </div>
    <div class="SpecialistSubmit">
        <input type="submit" value="Update Specialist Details"/>
    </div>
</form>

<style>
    .go-Back-List {
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        margin-bottom: 10px;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }
    form.Specialist-edit-from {
        display: table-caption;
        padding: 25px;
        background-color: #eaeae8;
    }
    input[type="text"] {
        height: 27px;
        width: 179px;
    }
    input[type="submit"] {
        margin-top: 14px;
        width: 183px;
        height: 33px;
        background-color: #007bff;
        color: #fff;
    }

</style>

