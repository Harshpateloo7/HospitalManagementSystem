
@{
    ViewBag.Title = "Create";
}

<h2>Create a new Patient</h2>
<form action="/Patient/Create" method="POST">
    <div>
        <label>Name:</label>
        <input type="text" name="PatientName" />
    </div>
    <div>
        <label>Phone:</label>
        <input type="number" name="PatientPhone" />
    </div>
    <div>
        <label>Email:</label>
        <input type="email" name="PatientEmail" />
    </div>
    <div>
        <label>Prescription:</label>
        <input type="text" name="PatientPrescription" />
    </div>
    <div>
        <label>Address:</label>
        <input type="text" name="PatientAddress" />
    </div>
    <div>
        <input type="submit" value="Add a new Patient" />
    </div>

</form>

